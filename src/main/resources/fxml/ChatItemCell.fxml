<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>

<HBox fx:id="chatItemHBox" styleClass="chat-container" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <ImageView fx:id="imageChatMsg" fitHeight="35" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../img/car-jackson-storm.png" />
            </image>
            <HBox.margin>
                <Insets left="10.0" right="10.0" />
            </HBox.margin>
        </ImageView>
        <Label fx:id="chatMsgLabel" maxWidth="450.0" minHeight="30.0" styleClass="chat-label" text="HOLA COMO ESTASsadfasdfsdafasfsdafasdfasdfasdf" wrapText="true">
         <HBox.margin>
            <Insets left="10.0" right="10.0" />
         </HBox.margin>
        </Label>
    </children>
    <stylesheets>
        <URL value="@../css/Styles.css" />
    </stylesheets>
</HBox>
