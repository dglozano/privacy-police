<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ChatFXMLController">
    <top>
        <BorderPane styleClass="header">
            <left>
                <ImageView fitHeight="50" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER">
                    <image>
                        <Image url="@img/logotipo.png" />
                    </image>
                </ImageView>
            </left>
            <right>
                <ImageView fitHeight="60" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER">
                    <image>
                        <Image url="@img/police.png" />
                    </image>
                </ImageView>
            </right>
         <BorderPane.margin>
            <Insets bottom="10.0" />
         </BorderPane.margin>
        </BorderPane>
    </top>
    <stylesheets>
        <URL value="@Styles.css" />
    </stylesheets>
   <bottom>
      <BorderPane styleClass="footer">
         <right>
            <Button mnemonicParsing="false" BorderPane.alignment="CENTER" />
         </right>
         <left>
            <TextField prefHeight="35.0" prefWidth="600.0" BorderPane.alignment="CENTER" />
         </left>
      </BorderPane>
   </bottom>
   <center>
      <HBox prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER" styleClass="borderless">
         <children>
            <ScrollPane prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" styleClass="borderless">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="600.0" prefWidth="200.0" styleClass="borderless">
                     <children>
                        <ListView />
                     </children>
                  </AnchorPane>
              </content>
            </ScrollPane>
            <ScrollPane prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" styleClass="borderless">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="600.0" prefWidth="200.0" styleClass="borderless">
                     <children>
                        <ListView prefHeight="200.0" prefWidth="200.0" />
                     </children></AnchorPane>
              </content>
            </ScrollPane>
         </children>
      </HBox>
   </center>
</BorderPane>
